<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.tesseract.tesseract.Login.SignUpFragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="Name"
            android:textColorHint="@color/material_grey_300"
            android:textColor="@color/material_grey_600"
            android:background="@drawable/normal_field"

            android:ems="10"
            android:id="@+id/name_editText"
            android:layout_gravity="center_horizontal" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="Surname"
            android:textColorHint="@color/material_grey_300"
            android:textColor="@color/material_grey_600"
            android:background="@drawable/normal_field"
            android:ems="10"
            android:id="@+id/surname_editText"
            android:layout_gravity="center_horizontal" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:hint="Email"
            android:textColorHint="@color/material_grey_300"
            android:textColor="@color/material_grey_600"
            android:background="@drawable/normal_field"
            android:ems="10"
            android:id="@+id/email_editText"
            android:layout_gravity="center_horizontal" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:background="@drawable/normal_field"
            android:hint="Confirm email"
            android:textColorHint="@color/material_grey_300"
            android:textColor="@color/material_grey_600"
            android:ems="10"
            android:id="@+id/confrim_email_edittext"
            android:layout_gravity="center_horizontal" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/normal_field"
            android:inputType="textPassword"
            android:hint="Password"
            android:textColorHint="@color/material_grey_300"
            android:textColor="@color/material_grey_600"
            android:ems="10"
            android:id="@+id/password_editText"
            android:layout_gravity="center_horizontal" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <Button
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="wrap_content"
                android:text="Cancel"
                android:textColor="#FFFF"
                android:background="@drawable/button_background"
                android:id="@+id/cancel_registration" />

            <Button
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="wrap_content"
                android:text="Register"
                android:background="@drawable/button_background"
                android:id="@+id/confirm_registration" />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>
